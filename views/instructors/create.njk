{% extends "layout.njk" %}


{% block content %}

  <form class="card" method="POST" action="/instructors">
    <section class="avatar"></section>

    <section class="details">
      <h3>Novo instrutor</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="http://">
        </div>
      </div>

      <div class="item">
        <div>Nome</div>
        <div>
          <input type="text" name="name">
        </div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="degree">
            <option value="medio" select>Ensino Médio</option>
            <option value="superior">Ensino Superior</option>
            <option value="mestrado">Mestrado</option>
            <option value="doutorado">Doutorado</option>
          </select>
        </div>
      </div>
      
      <div class="item">
        <div>Tipo da aula</div>
        <div>
          <span><input type="radio" name="typeClass" value="presencial">Presencial</span>
          <span><input type="radio" name="typeClass" value="distancia">À distância</span>
        </div>
      </div>

      <div class="item">
        <div>Gênero</div>
        <div>
          <span><input type="radio" name="gender" value="M" checked>Masculino</span>
          <span><input type="radio" name="gender" value="F">Feminino</span>
        </div>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="services" placeholder="Separe os serviços por vírgula">
        </div>
      </div>

      <button type="submit">Salvar</button>

    </section>
  </form>

{% endblock content %}